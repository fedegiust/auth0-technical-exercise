extends layout

block content
  img(src="#{pageData.user.picture}")
  h2 Welcome #{pageData.user.nickname}!
  br
  h3 Here's the list of Applications on your account
  div
    table
        thead
            tr.head
                th Name
                th Description
        tbody
            for app in pageData.apps
                tr
                    td #{app.name}
                    td #{app.description}
  br
  h3 Here's the list of rules on your account
  div
    table
        thead
            tr.head
                th Order
                th Id
                th Rule Name
                th Application Name
                th Enabled
        tbody
            for appName in pageData.appNames
                tr
                    td #{appName.order}
                    td #{appName.id}
                    td #{appName.name}
                    td #{appName.appName}
                    td #{appName.enabled}

  br
  a(href='/logout') Logout
